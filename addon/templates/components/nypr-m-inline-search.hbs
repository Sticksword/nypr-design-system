{{!-- BEGIN-SNIPPET nypr-m-inline-search.hbs --}}
{{#if (has-block)}}
  {{yield (hash
    open=(component 'nypr-m-inline-search/open'
      onclick=(action (mut this.isOpen) true)
      ariaExpanded=(if this.isOpen 'true' 'false')
    )
    form=(component 'nypr-m-inline-search/form'
      close=(action (mut this.isOpen) false)
      class=@formClass
      isOpen=this.isOpen
    )
  )}}
{{else}}
  {{nypr-m-inline-search/form
    search=(action (optional @search))
    class=@formClass
  }}
{{/if}}
{{!-- END-SNIPPET --}}
