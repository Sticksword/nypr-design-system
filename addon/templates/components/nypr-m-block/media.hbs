{{#if @url}}
  <a href={{@url}} target="_blank" rel="noopener">
    <NyprAPicture
      @srcS={{@srcS}}
      @breakM={{@breakM}}
      @srcM={{@srcM}}
      @breakL={{@breakL}}
      @srcL={{@srcL}}
      @breakXl={{@breakXL}}
      @srcXl={{@srcXL}}
      @alt={{@alt}}
      @lazy={{@lazy}}
      @width={{@width}}
      @height={{@height}}
    />
  </a>
{{else if @route}}
  {{#link-to params=@route}}
    <NyprAPicture
      @srcS={{@srcS}}
      @breakM={{@breakM}}
      @srcM={{@srcM}}
      @breakL={{@breakL}}
      @srcL={{@srcL}}
      @breakXl={{@breakXL}}
      @srcXl={{@srcXL}}
      @alt={{@alt}}
      @lazy={{@lazy}}
      @width={{@width}}
      @height={{@height}}
    />
  {{/link-to}}
{{else}}
  <NyprAPicture
    @srcS={{@srcS}}
    @breakM={{@breakM}}
    @srcM={{@srcM}}
    @breakL={{@breakL}}
    @srcL={{@srcL}}
    @breakXl={{@breakXL}}
    @srcXl={{@srcXL}}
    @alt={{@alt}}
    @lazy={{@lazy}}
    @width={{@width}}
    @height={{@height}}
  />
{{/if}}

{{#if @tag}}
  {{#link-to params=@tag.route class="c-block__tag o-kicker"}}{{@tag.label}}{{/link-to}}
{{/if}}
