{{!-- BEGIN-SNIPPET nypr-m-figure.hbs --}}
{{#if (has-block)}}
  {{yield (hash
    image=(component 'nypr-m-figure/image')
    figcaption=(component 'nypr-m-figcaption')
  )}}
{{else}}
  {{nypr-m-figure/image
    breakXl=@breakXl
    srcXl=@srcXl
    breakL=@breakL
    srcL=@srcL
    breakM=@breakM
    srcM=@srcM
    breakS=@breakS
    srcS=@srcS
    lazy=@lazy-load
    alt=(or @alt @caption)
    ratio=@ratio
  }}

  <NyprMFigcaption @caption={{@caption}} @credit={{@credit}} @creditLink={{@creditLink}} />
{{/if}}
{{!-- END-SNIPPET --}}
