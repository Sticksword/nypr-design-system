{{!-- BEGIN-SNIPPET nypr-m-figure.hbs --}}
{{#if (has-block)}}
  {{yield (hash
    image=(component 'nypr-m-figure/image')
    figcaption=(component 'nypr-m-figcaption')
  )}}
{{else}}
  {{nypr-m-figure/image
    break-xl=@break-xl
    src-xl=@src-xl
    break-l=@break-l
    src-l=@src-l
    break-m=@break-m
    src-m=@src-m
    break-s=@break-s
    src-s=@src-s
    lazy=@lazy-load
    alt=(or @alt @caption)
  }}

  <NyprMFigcaption @caption={{@caption}} @credit={{@credit}} />
{{/if}}
{{!-- END-SNIPPET --}}
