{{!-- BEGIN-SNIPPET nypr-m-figure.hbs --}}
{{#if (has-block)}}
  {{yield}}
{{else}}
  <div class="o-figure__image">
    <NyprAPicture
      @break-xl={{@break-xl}}
      @src-xl={{@src-xl}}
      @break-l={{@break-l}}
      @src-l={{@src-l}}
      @break-m={{@break-m}}
      @src-m={{@src-m}}
      @break-s={{@break-s}}
      @src-s={{@src-s}}
      @lazy={{@lazy-load}}
      @alt={{or @alt @caption}}
    />
  </div>
{{/if}}

<NyprMFigcaption @caption={{@caption}} @credit={{@credit}} />
{{!-- END-SNIPPET --}}
