{{!-- BEGIN-SNIPPET nypr-a-picture.hbs --}}
{{#if @breakXl}}
  <source srcset={{@srcXl}} media="(min-width: {{@breakXl}}px)">
{{/if}}

{{#if @breakL}}
  <source srcset={{@srcL}} media="(min-width: {{@breakL}}px)">
{{/if}}

{{#if @breakM}}
  <source srcset={{@srcM}} media="(min-width: {{@breakM}}px)">
{{/if}}

{{#if @lazy}}
  <img
    class="lazy"
    src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
    data-src={{@srcS}}
    itemprop="image"
    alt={{@alt}}
    width={{@width}}
    height={{@height}}
    >
{{else}}
  <img src={{@srcS}} itemprop="image" alt={{@alt}} width={{@width}} height={{@height}}>
{{/if}}
{{!-- END-SNIPPET --}}
