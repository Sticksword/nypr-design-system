{{#if this.rules.leaderboard}}
  {{yield (hash leaderboard=(component 'nypr-o-header/leaderboard'))}}
{{/if}}

<div class="c-main-header__inner {{if this.outOfViewport 'c-floating-header is-visible'}}" id="header-inner">

  {{yield (hash
    menu=(component 'nypr-o-header/menu' donateURL=@donateURL close=(action toggleMenu false) heightOffset=this.menuHeightOffset)
    left=(component 'nypr-o-header/left' openMenu=(action toggleMenu) ariaExpanded=(if this.isOpen 'true' 'false'))
    nav=(component 'nypr-o-header/nav' class="c-primary-nav--top")
    right=(component 'nypr-o-header/right')
    outOfViewport=this.outOfViewport
    rules=this.rules
  )}}

  {{#if this.rules.progressBar}}
    <NyprMProgressBar />
  {{/if}}

  <div class="c-content-overlay"></div>

</div>
