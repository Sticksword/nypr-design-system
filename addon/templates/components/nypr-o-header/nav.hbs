{{!-- BEGIN-SNIPPET nypr-o-header-nav.hbs --}}
<ul>
  {{#each @navItems as |item i|}}
    <li class="c-primary-nav__item" name="header{{i}}">
      {{#if item.route}}
        {{#link-to
          params=item.route
          class=(concat 'c-primary-nav__link ' @linkClass)
          data-test-nav-link=i
        }}
          {{#if item.icon}}
            <div class='c-primary-nav-link__icon'>
              <NyprASvg @icon={{item.icon}} />
            </div>
          {{/if}}
          {{#if item.text}}
            <div class='c-primary-nav-link__text'>{{item.text}}</div>
          {{/if}}
        {{/link-to}}
      {{else if item.url}}
        <a
          href={{item.url}}
          class="c-primary-nav__link {{@linkClass}}"
          data-test-nav-link={{i}}
        >
          {{#if item.icon}}
            <div class='c-primary-nav-link__icon'>
              <NyprASvg @icon={{item.icon}} />
            </div>
          {{/if}}
          {{#if item.text}}
            <div class='c-primary-nav-link__text'>{{item.text}}</div>
          {{/if}}
        </a>
      {{/if}}
    </li>
  {{/each}}
</ul>
{{!-- END-SNIPPET --}}
