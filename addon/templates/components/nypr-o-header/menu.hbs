<div class="c-side-menu__group">

  <div class="c-side-menu__branding">
    <NyprASvg @icon='gothamist-logo'/>
  </div>

  <NyprAButton
    class='c-side-menu__donate'
    @url='https://pledge3.wnyc.org/donate/gothamist/onestep/?utm_medium=partnersite&utm_source=gothamist&utm_campaign=brandheader'>
    Donate
  </NyprAButton>


  {{nypr-o-header/menu
    navItems=@primaryNav
    class="c-primary-nav--side"
    linkClass="u-has-accent u-has-accent--quaternary"
  }}

  <div class="c-side-menu__social">
    <NyprMShareTools @label='Follow Us' as |share|>
      <share.link @service='facebook' />
      <share.link @service='twitter' />
      <share.link @service='instagram' />
      <share.link @service='youtube' />
    </NyprMShareTools>
  </div>

</div>

<div class="c-side-menu__group">

  <div class="c-side-menu__secondary-nav">
    <NyprMSecondaryNav @navItems={{@secondaryNav}}/>
  </div>

  <div class="u-spacing">
    {%
      include '@molecules/forms/search-entry.twig'
      with {
        "search_classes": "c-search--side"
      }
    %}
    {%
      include '@atoms/buttons/button.twig'
      with {
        "button_text": "Send a Story Idea",
        "button_classes": "c-side-menu__send-story o-button--quaternary u-full-width"
      }
    %}
  </div>

  <div class="c-side-menu__nypr-logo">
    <NyprASvg @icon='nypr-logo'/>
  </div>

  <div class="c-side-menu__nypr-linkroll">
    <NyprMBrandsLinkroll/>
  </div>

</div>

<div class="c-side-menu__group u-spacing--double">

  <div class="c-side-menu__copyright">
    <p class="u-font--secondary-style u-font--xs u-color--white">&copy; {{moment-format (now) 'YYYY'}} New York Public Radio. All rights reserved.</p>
  </div>

  <div class="c-side-menu__terms-links">
    <a href="" class="u-font--secondary-style u-font--xs"><strong>Terms of Use</strong></a>
    <a href="" class="u-font--secondary-style u-font--xs"><strong>Privacy Policy</strong></a>
  </div>

</div>
