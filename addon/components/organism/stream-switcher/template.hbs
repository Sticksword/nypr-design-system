{{#if (gt (dictionary-length @streams) 0)}}
    <ul class='stream-switcher-streams'>
        {{#each (dictionary-values @streams) as |stream|}}
            <li class='stream-switcher-streams-stream'>
                <div class='stream-switcher-streams-stream-title'>{{stream.name}}</div>
                <NyprMOnAirImage
                    @stream={{stream.stream}}
                    @show={{stream.liveAiring.show}}
                />
                <div class='stream-switcher-streams-stream-show-title'>
                    {{stream.liveAiring.showTitle}}
                </div>
                {{#if stream.nextAiring}}
                    <div class='stream-switcher-streams-streams-up-next-label'>up next</div>
                    <div class='stream-switcher-streams-streams-up-next-show-title'>{{stream.nextAiring.showTitle}}</div>
                    <div class='stream-switcher-streams-streams-up-next-time'>{{time}}</div>
                {{/if}}
            </li>
        {{/each}}
    </ul>
{{/if}}

{{yield}}
