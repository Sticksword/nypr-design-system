{{!-- BEGIN-SNIPPET nypr-a-picture.hbs --}}
{{#if @breakXl}}
  <source
    data-test-source-xl
    srcset={{@srcXl}}
    media="(min-width: {{@breakXl}}px)"
  >
{{/if}}

{{#if @breakL}}
  <source
    data-test-source-l
    srcset={{@srcL}}
    media="(min-width: {{@breakL}}px)"
  >
{{/if}}

{{#if @breakM}}
  <source
    data-test-source-m
    srcset={{@srcM}}
    media="(min-width: {{@breakM}}px)"
  >
{{/if}}

{{#if @lazy}}
  <img
    class="lazy"
    src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
    data-src={{@srcS}}
    itemprop="image"
    alt={{@alt}}
    width={{@width}}
    height={{@height}}
    srcset={{@srcSet}}
  >
{{else}}
  <img
    src={{@srcS}}
    itemprop="image"
    alt={{@alt}}
    width={{@width}}
    height={{@height}}
    srcset={{@srcSet}}
  >
{{/if}}
{{!-- END-SNIPPET --}}
